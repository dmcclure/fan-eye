                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('demo_fan_eye_default_index') }}">Fan Eye for the Sci-Fi</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li
                        {% if app.request.attributes.get('_route') == 'demo_fan_eye_default_index' %}
                            class="active"
                        {% endif %}
                        ><a href="{{ path('demo_fan_eye_default_index') }}">Home</a>
                    </li>
                    <li
                        {% if app.request.attributes.get('_route') == 'demo_fan_eye_default_about' %}
                            class="active"
